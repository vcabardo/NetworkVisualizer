<html lang="en">
  <head>
    <title>Network</title>
    <script
      type="text/javascript",
      src="https://unpkg.com/vis-network/standalone/umd/vis-network.min.js"
    ></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Document </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/style.css">
    <script src="http://localhost:3000/socket.io/socket.io.js"></script>
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
    <div class="container-fluid">
      <div class="row min-vh-100">
        <div class="col-1 sidebar">
          <%- include("../partials/navbar.ejs") %>
        </div>

        <%# card code from: https://getbootstrap.com/docs/5.0/components/card/ %>
        <div class="col-11 content bg-gradient">
          <div class="row">
            <h3 class="text-white">Using This Application</h1>
          </div>
          <div class="row">
            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">View Page</h5>
                  <p class="card-text">This is the place for directly viewing and editing all of your graphs.</p>
                  <a href="view" class="btn btn-primary">Get Started</a>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Upload Page</h5>
                  <p class="card-text">Want to upload a file representing your graph instead? Go here to upload your file.</p>
                  <a href="upload" class="btn btn-primary">Get Started</a>
                </div>
              </div>
            </div>

            <div class="col">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">List Page</h5>
                  <p class="card-text">View all of your graphs.</p><br>
                  <a href="list" class="btn btn-primary">Get Started</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
